{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "listOfAllowedLocationsParameter": {
      "type": "object",
      "metadata": {
        "comment": "Policy parameters should be provided as an object"
      },
      "defaultValue": {
        "listOfAllowedLocations": {
          "value":  ["Japan East","Japan West","Global"]
        }
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Authorization/policyAssignments",
      "name": "許可されている場所",
      "apiVersion": "2022-06-01",
      "properties": {
        "scope": "[subscription().Id]",
        "policyDefinitionId": "/providers/Microsoft.Authorization/policyDefinitions/e56962a6-4747-49cd-b67b-bf8b01975c4c",
        "nonComplianceMessages": [
          {
            "message": "Azureリソースのデプロイは指定されたリージョンへのみ許可されています"
          }
        ],
        "parameters": "[parameters('listOfAllowedLocationsParameter')]"
      }
    }
  ]
}